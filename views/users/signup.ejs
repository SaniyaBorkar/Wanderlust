<% layout("/layouts/boilerplate") -%>
<div class="row">
    <h1 class="col-6 offset-3">Signup on Wanderlust</h1>
    <div class="col-6 offset-3">
        <form action="/signup" method="POST" class="needs-validation" novalidate>
            <div  class="mb-3">
                <lable for="username" class="form-label">Username</lable>
                <input type="text" name="username" id="username" class="form-control" required> 
                <div class="valid-feedback">
                     Looks good!
                  </div>
            </div>
            <div  class="mb-3">
                <lable for="email" class="form-label">Email</lable>
                <input type="text" name="email" id="email" class="form-control" required> 
                
            </div>
            <div  class="mb-3">
                <lable for="password" class="form-label">Password</lable>
                <input type="text" name="password" id="password" class="form-control" required> 
                
            </div>
            <button class="btn btn-dark">Signup</button>
        </form>
    </div>
</div>